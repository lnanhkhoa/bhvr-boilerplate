{
  "name": "bhvr-boilerplate",
  "version": "0.0.1",
  "description": "A monorepo boilerplate built with Bun, Hono, Vite, and React. Inspired by https://github.com/stevedylandev/bhvr",
  "author": "Khoa Le",
  "license": "MIT",
  "homepage": "https://github.com/lnanhkhoa/bhvr-boilerplate",
  "private": false,
  "scripts": {
    "dev": "turbo dev",
    "dev:client": "turbo dev --filter=client",
    "dev:server": "turbo dev --filter=server",
    "build": "turbo build",
    "build:client": "turbo build --filter=client",
    "build:server": "turbo build --filter=server",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "postinstall": "turbo build --filter=@repo/shared"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo",
    "turbo"
  ],
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.31.4",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5"
  },
  "peerDependencies": {
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.6",
    "react": "^19.1.1",
    "resend": "^6.0.3"
  },
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
